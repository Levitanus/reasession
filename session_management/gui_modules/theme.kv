<SplashBoxLayout@BoxLayout>:
    bg_color: (42/255, 161/255, 152/255)
    alpha: 0.1
    canvas.before:
        Color:
            rgb: root.bg_color
            a: root.alpha
        Rectangle:
            pos: self.x+2, self.y+2
            size: self.width-4, self.height-4
