
<Layout>:
    alpha: 1
    bg_color: (26/255,40/255,49/255)
    canvas.before:
        Color: 
            rgb: root.bg_color
            a: root.alpha
        Rectangle:
            pos: self.pos
            size: self.size
<BoxLayoutLight@BoxLayout>:
    bg_color: (40/255,53/255,62/255)
